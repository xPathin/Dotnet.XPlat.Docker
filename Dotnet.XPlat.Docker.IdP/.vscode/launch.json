{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prepare_debug",
            "cwd": "/app",
            "program": "/app/bin/Debug/publish/Dotnet.XPlat.Docker.IdP.App.dll",
            "args": [],
            "sourceFileMap": {
                "/app": "${workspaceFolder}/Dotnet.XPlat.Docker.IdP.App",
            },       
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeCwd": "${workspaceFolder}",
                "pipeArgs": [
                    "exec -i docker-idp"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            }
        },
    ]
}