{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Dotnet.XPlat.Docker.IdP.App/Dotnet.XPlat.Docker.IdP.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Dotnet.XPlat.Docker.IdP.App/Dotnet.XPlat.Docker.IdP.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Dotnet.XPlat.Docker.IdP.App/Dotnet.XPlat.Docker.IdP.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "prepare_debug_publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Dotnet.XPlat.Docker.IdP.App/Dotnet.XPlat.Docker.IdP.App.csproj",
                "/property:GenerateFullPaths=true",
                "/property:PublishDir=./bin/Debug/publish",
                "/property:RazorCompileOnBuild=false",
                "/property:MvcRazorCompileOnPublish=false",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "prepare_debug_docker-compose_down",
            "type": "docker-compose",
            "dockerCompose": {
              "down": {"customOptions": ""},
              "files": [
                "${workspaceFolder}/docker-compose.yml",
                "${workspaceFolder}/docker-compose.override.yml"
              ]
            },
            "problemMatcher": []
        },
        {
            "label": "prepare_debug_docker-compose_up",
            "type": "docker-compose",
            "dockerCompose": {
              "up": {"build": true, "customOptions": "-d"},
              "files": [
                "${workspaceFolder}/docker-compose.yml",
                "${workspaceFolder}/docker-compose.override.yml"
              ]
            },
            "problemMatcher": []
        },
        {
            "label": "prepare_debug",
            "dependsOrder": "sequence",
            "dependsOn": ["prepare_debug_publish", "prepare_debug_docker-compose_up"]
        }
    ]
}