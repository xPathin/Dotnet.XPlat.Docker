{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prepare_debug",
            // "cwd": "/app/bin/Debug/net5.0/",
            "program": "/app/bin/Debug/net5.0/Dotnet.XPlat.Docker.WebApp.App.dll",
            "args": [],
            "sourceFileMap": {
                "/app": "${workspaceFolder}/Dotnet.XPlat.Docker.WebApp.App",
            },      
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeCwd": "${workspaceFolder}",
                "pipeArgs": [
                    "exec -i docker-webapp"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false,
            }
        },
    ]
}